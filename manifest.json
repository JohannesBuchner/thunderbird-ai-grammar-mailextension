{
    "name": "Thunderbird Langtool Mail Extension",
    "description": "Language Tool extension for Thunderbird (unofficial)",
    "version": "1",
    "author": "Raul Pardo",
    "applications": {
	"gecko": {
	    "id": "langtool-thunderbird@raulpardo.net",
	    "strict_min_version": "74.0b2"
	}
    },
    "icons": {
        "64": "img/icon.png"
    },
    "permissions": [
	"storage",
	"compose"
    ],
    "background": {
	"scripts": [
	    "background.js"
	]
    },
    "compose_action": {
	"default_title": "Grammar Check",
	"default_popup": "popup.html",
	"default_icon": "img/icon.png"
    },
    "options_ui": {	
	"page": "options.html",
	"open_in_tab": false,
        "browser_style": true
    },
    "manifest_version": 2
}
